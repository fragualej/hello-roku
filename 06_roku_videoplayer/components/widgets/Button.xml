<?xml version = "1.0" encoding = "utf-8" ?>
<component name="Button" extends="Group" >
    <interface>
        <field id="text" type="string" onChange="textChanged" />
        <field id="width" type="integer" onChange="widthChanged" />
        <field id="height" type="integer" onChange="heightChanged" />
        <field id="pressed" type="boolean" alwaysNotify="true" value="false" />
    </interface>
    <script type="text/brightscript" uri="Button.brs" />
    <children>
        <Rectangle
            id="border"
            visible="false"
            color="0xAAAAAA" />
        <Rectangle
            id="background"
            color="0x000080"
            translation="[5,5]" />
        <Label
            id="label"
            font="font:SmallestBoldSystemFont"
            horizAlign="center"
            vertAlign="center"
            translation="[5,5]" />
    </children>
</component>